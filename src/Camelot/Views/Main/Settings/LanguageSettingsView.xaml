<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:Camelot.Properties"
             xmlns:settings="clr-namespace:Camelot.ViewModels.Implementations.Settings;assembly=Camelot.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Camelot.Views.Main.Settings.LanguageSettingsView">
  
    <Design.DataContext>
        <settings:LanguageSettingsViewModel />
    </Design.DataContext>
  
    <ItemsControl Grid.Row="1" Margin="10,10,0,0" Items="{Binding Languages}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <RadioButton GroupName="Languages">
                    <RadioButton.Content>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="Name" />
                            <Binding Path="NativeName" />
                        </MultiBinding>
                    </RadioButton.Content>
                </RadioButton>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>