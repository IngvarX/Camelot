                                </Image>

                                <TextBlock Classes="settingsTabTextBlock" Text="{x:Static p:Resources.Keyboard}" />
                            </StackPanel>
                        </Border>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border Classes="settingsContentBorder">
                            <settings:KeyboardSettingsView DataContext="{Binding KeyboardSettingsViewModel}" />
                        </Border>
                    </TabItem.Content>
                </TabItem>
            </TabControl>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Classes="dialogButton transparentDialogButton" Content="{x:Static p:Resources.Close}" Command="{Binding CloseCommand}" />
                <Button Classes="dialogButton applyDialogButton" Content="{x:Static p:Resources.Apply}" Command="{Binding SaveCommand}" />
            </StackPanel>
        </Grid>
    </Border>

</Window>
