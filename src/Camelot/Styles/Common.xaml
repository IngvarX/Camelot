<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:Camelot.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="Button">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Button.operationButton">
        <Setter Property="Padding" Value="6" />
    </Style>

    <Style Selector="TextBlock.operationTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style Selector="Button.iconButton">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style Selector="Border.tabBorder">
        <Setter Property="CornerRadius" Value="4,4,0,0" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="Button.tabButton">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="TextBox.directoryTextBox">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Margin" Value="10,0,15,0" />
    </Style>

    <Style Selector="Rectangle.tabRectangle">
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="MenuItem">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="FontFamily" Value="SansSerif" />
    </Style>

    <Style Selector="MenuItem:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}" />
    </Style>

    <Style Selector="Grid#OverlayGrid">
        <Setter Property="ZIndex" Value="-1" />
        <Setter Property="Background" Value="Black" />
        <Setter Property="Opacity" Value="0.2" />
    </Style>

    <Style Selector="TextBox#DirectoryNameTextBox">
        <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style Selector="Button.dialogButton">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="20,10" />
        <Setter Property="Padding" Value="15,10" />
    </Style>

    <Style Selector="Button.dialogButton /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style Selector="TextBlock.dialogTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style Selector="TextBlock.selectionInfoTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style Selector="TextBlock.aboutPageTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style Selector="TextBlock.filePanelTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.tabNameTextBlock">
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="DataGridColumnHeader">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="Border#OperationsBorder">
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style Selector="TextBlock.operationStatusTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector="TextBlock.successTextBlock">
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
    </Style>

    <Style Selector="TextBlock.errorTextBlock">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
    </Style>

    <Style Selector="ProgressBar.operationProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource ProgressBarForegroundBrush}" />
        <Setter Property="Background" Value="{DynamicResource ProgressBarBackgroundBrush}" />
    </Style>

</Styles>